# LinkOps SOAR-Copilot Configuration

# ===================
# Core Settings
# ===================
PROJECT_NAME=LinkOps-SOAR-Copilot
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ===================
# API Configuration
# ===================
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here-change-in-production

# ===================
# Database
# ===================
DATABASE_URL=postgresql://soar:password@localhost:5432/soar_copilot
CHROMA_DB_PATH=./data/chroma
REDIS_URL=redis://localhost:6379

# ===================
# Local LLM Settings
# ===================
LLM_MODEL=microsoft/Phi-3.5-mini-instruct
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3
ENABLE_GPU=true

# OpenAI Fallback (Optional)
OPENAI_API_KEY=sk-your-openai-key-for-fallback
OPENAI_MODEL=gpt-4o-mini

# ===================
# RAG Pipeline
# ===================
RAG_NAMESPACE=soar-knowledge
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===================
# Splunk Integration
# ===================
SPLUNK_HOST=your-splunk-instance.com
SPLUNK_PORT=8089
SPLUNK_USERNAME=soar-service-account
SPLUNK_PASSWORD=your-splunk-password
SPLUNK_INDEX=main
SPLUNK_HEC_TOKEN=your-hec-token
SPLUNK_HEC_URL=https://your-splunk-instance.com:8088

# ===================
# LimaCharlie Integration
# ===================
LIMACHARLIE_OID=your-organization-id
LIMACHARLIE_API_KEY=your-limacharlie-api-key
LIMACHARLIE_JWT_SECRET=your-jwt-secret

# ===================
# MCP Tools
# ===================
MCP_SERVER_PORT=8001
MCP_TOOLS_DIR=./mcp-tools
MCP_LOG_LEVEL=INFO

# ===================
# RPA Engine
# ===================
RPA_ENABLED=true
RPA_HEADLESS=true
RPA_TIMEOUT=30
RPA_MAX_RETRIES=3

# ===================
# Security Settings
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# ===================
# Monitoring & Logging
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/soar-copilot.log
METRICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn-here

# ===================
# Threat Intelligence
# ===================
MISP_URL=https://your-misp-instance.com
MISP_KEY=your-misp-api-key
VIRUSTOTAL_API_KEY=your-virustotal-api-key
ABUSE_IPDB_KEY=your-abuseipdb-key

# ===================
# Notification Settings
# ===================
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=alerts@your-domain.com
EMAIL_PASSWORD=your-email-password

# ===================
# Frontend
# ===================
FRONTEND_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:8000/ws

# ===================
# Development
# ===================
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=true