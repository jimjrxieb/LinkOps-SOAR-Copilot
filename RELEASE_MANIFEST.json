{
  "release_info": {
    "version": "1.0.0",
    "codename": "WHIS-AUTONOMOUS",
    "release_date": "2025-01-24T00:00:00Z",
    "build_id": "whis-production-001",
    "release_type": "production",
    "changelog_url": "https://github.com/linkops-industries/SOAR-copilot/releases/tag/v1.0.0"
  },
  
  "deployment_info": {
    "environment": "production",
    "deployment_target": "kubernetes",
    "minimum_requirements": {
      "cpu_cores": 8,
      "memory_gb": 32,
      "storage_gb": 100,
      "gpu_memory_gb": 16
    },
    "recommended_requirements": {
      "cpu_cores": 16,
      "memory_gb": 64,
      "storage_gb": 500,
      "gpu_memory_gb": 24
    }
  },

  "api_endpoints": {
    "base_url": "http://localhost:8000",
    "endpoints": [
      {
        "path": "/",
        "method": "GET",
        "description": "Interactive WHIS dashboard",
        "authentication": "none",
        "response_format": "html"
      },
      {
        "path": "/health",
        "method": "GET", 
        "description": "System health check with AI engine status",
        "authentication": "none",
        "response_format": "json",
        "schema_ref": "#/components/schemas/SystemStatus"
      },
      {
        "path": "/chat",
        "method": "POST",
        "description": "AI-powered security chat with RAG enhancement",
        "authentication": "optional",
        "request_schema_ref": "#/components/schemas/ChatRequest",
        "response_schema_ref": "#/components/schemas/ChatResponse",
        "rate_limit": "100/hour"
      },
      {
        "path": "/threat-hunt",
        "method": "POST",
        "description": "Initiate autonomous threat hunting",
        "authentication": "required",
        "request_schema_ref": "#/components/schemas/ThreatHuntRequest",
        "response_schema_ref": "#/components/schemas/ThreatHuntResponse",
        "rate_limit": "10/hour"
      },
      {
        "path": "/incident",
        "method": "POST",
        "description": "Create intelligent incident response plan",
        "authentication": "required",
        "request_schema_ref": "#/components/schemas/IncidentRequest", 
        "response_schema_ref": "#/components/schemas/IncidentResponse",
        "rate_limit": "20/hour"
      },
      {
        "path": "/rag/status",
        "method": "GET",
        "description": "RAG system status with evaluation metrics",
        "authentication": "none",
        "response_format": "json"
      },
      {
        "path": "/metrics",
        "method": "GET",
        "description": "System performance metrics",
        "authentication": "none",
        "response_format": "json"
      },
      {
        "path": "/ws",
        "method": "WEBSOCKET",
        "description": "Real-time system updates",
        "authentication": "optional"
      }
    ]
  },

  "ai_models": {
    "base_model": {
      "name": "microsoft/DialoGPT-medium",
      "version": "1.0",
      "type": "conversational_language_model",
      "parameters": "345M",
      "quantization": "none",
      "external_reference": "external-artifacts/ai-training/llm/base-models/DialoGPT-medium"
    },
    "adapters": {
      "whis-mega-model": {
        "version": "v1.2.0",
        "type": "LoRA",
        "rank": 16,
        "alpha": 32,
        "target_modules": ["c_attn", "c_proj", "c_fc"],
        "external_reference": "external-artifacts/ai-training/llm/adapters/whis-mega-model",
        "training_dataset": "security_scenarios_v2",
        "evaluation_metrics": {
          "f1_score": 0.89,
          "exact_match": 0.82,
          "security_relevance": 0.91
        }
      },
      "whis-cybersec-model": {
        "version": "v1.1.0", 
        "type": "LoRA",
        "rank": 16,
        "alpha": 32,
        "external_reference": "external-artifacts/ai-training/llm/adapters/whis-cybersec-model",
        "specialization": "cybersecurity_analysis",
        "evaluation_metrics": {
          "f1_score": 0.85,
          "technical_accuracy": 0.88
        }
      }
    }
  },

  "rag_system": {
    "vector_store": {
      "type": "chromadb",
      "version": "0.4.15",
      "collection_name": "whis_security_knowledge",
      "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",
      "embedding_dimensions": 384
    },
    "indices": {
      "whis_senior_knowledge": {
        "version": "v1.2.3",
        "documents": 1247,
        "last_updated": "2025-01-24T00:00:00Z",
        "external_reference": "external-artifacts/ai-training/rag/vectorstore/whis_senior_knowledge_latest.faiss",
        "checksum": "sha256:a1b2c3d4e5f6...",
        "evaluation_results": {
          "ragas_score": 0.89,
          "hit_at_5": 0.92,
          "faithfulness": 0.87,
          "answer_relevance": 0.84,
          "context_precision": 0.82,
          "context_recall": 0.79
        }
      }
    },
    "retrieval_config": {
      "hybrid_search": true,
      "vector_weight": 0.7,
      "bm25_weight": 0.3,
      "reranking": true,
      "max_context_length": 4000
    }
  },

  "security_features": {
    "authentication": {
      "type": "JWT",
      "algorithm": "HS256",
      "token_expiry": "24h",
      "refresh_enabled": false
    },
    "authorization": {
      "rbac_enabled": true,
      "roles": ["user", "admin"],
      "protected_endpoints": ["/threat-hunt", "/incident"]
    },
    "data_protection": {
      "pii_redaction": true,
      "prompt_injection_protection": true,
      "input_sanitization": true,
      "output_filtering": true
    },
    "network_security": {
      "cors_policy": "strict",
      "allowed_origins": ["http://localhost:8000", "http://127.0.0.1:8000"],
      "trusted_hosts": ["localhost", "127.0.0.1", "*.local"],
      "rate_limiting": true,
      "request_size_limit": "10MB"
    }
  },

  "monitoring_and_observability": {
    "metrics": {
      "prometheus_enabled": true,
      "custom_metrics": [
        "inference_latency_ms_p95",
        "rag_chunks_upserted_total", 
        "eval_ragas_score",
        "autonomous_actions_count",
        "ws_connected_clients"
      ]
    },
    "logging": {
      "structured_logging": true,
      "log_level": "INFO",
      "pii_redaction": true,
      "correlation_ids": true,
      "destinations": ["console", "file", "remote"]
    },
    "tracing": {
      "opentelemetry_enabled": true,
      "jaeger_compatible": true,
      "sample_rate": 0.1
    },
    "health_checks": {
      "liveness_probe": "/health",
      "readiness_probe": "/health",
      "startup_probe": "/health"
    }
  },

  "data_governance": {
    "data_sources": [
      {
        "name": "open_malsec_dataset",
        "type": "security_scenarios",
        "license": "MIT",
        "url": "https://github.com/open-malsec/dataset",
        "usage": "training_and_evaluation"
      },
      {
        "name": "security_playbooks",
        "type": "incident_response",
        "classification": "internal",
        "usage": "rag_corpus"
      }
    ],
    "data_retention": {
      "chat_logs": "90d",
      "audit_logs": "7y",
      "metrics": "1y",
      "model_artifacts": "indefinite"
    },
    "compliance": {
      "frameworks": ["SOC2", "ISO27001"],
      "data_residency": "US",
      "encryption_at_rest": true,
      "encryption_in_transit": true
    }
  },

  "testing_and_validation": {
    "test_suites": {
      "unit_tests": {
        "coverage_threshold": 0.80,
        "frameworks": ["pytest", "unittest"]
      },
      "integration_tests": {
        "e2e_pipeline": true,
        "api_contract_tests": true,
        "security_tests": true
      },
      "performance_tests": {
        "load_testing": true,
        "stress_testing": true,
        "latency_benchmarks": true
      }
    },
    "quality_gates": {
      "code_quality": {
        "sonarqube_grade": "A",
        "security_hotspots": 0,
        "code_smells": "<10"
      },
      "ml_performance": {
        "model_accuracy": ">0.85",
        "rag_faithfulness": ">0.80",
        "inference_latency_p95": "<500ms"
      }
    }
  },

  "operational_procedures": {
    "deployment": {
      "method": "blue_green",
      "rollback_strategy": "automatic_on_failure",
      "deployment_checklist_url": "docs/deployment-checklist.md"
    },
    "maintenance": {
      "model_retraining_schedule": "monthly",
      "index_refresh_schedule": "daily",
      "dependency_updates": "weekly"
    },
    "incident_response": {
      "escalation_matrix": "docs/escalation-matrix.md",
      "runbooks": "docs/runbooks/",
      "monitoring_playbooks": "docs/monitoring-playbooks.md"
    }
  },

  "external_dependencies": {
    "python_packages": {
      "runtime": [
        "fastapi>=0.104.0",
        "uvicorn>=0.24.0",
        "transformers>=4.36.0",
        "torch>=2.1.0",
        "chromadb>=0.4.15",
        "sentence-transformers>=2.2.2",
        "pydantic>=2.5.0"
      ],
      "development": [
        "pytest>=7.4.0",
        "black>=23.11.0",
        "ruff>=0.1.6",
        "mypy>=1.7.0"
      ]
    },
    "system_dependencies": [
      "python>=3.9",
      "cuda>=11.8",
      "docker>=24.0",
      "kubernetes>=1.28"
    ]
  },

  "artifact_references": {
    "externalized_artifacts_manifest": "EXTERNAL_ARTIFACTS_MANIFEST.json",
    "total_artifacts_size_gb": 16.03,
    "artifact_storage_location": "external-artifacts/",
    "restoration_script": "scripts/restore-artifacts.py"
  },

  "support_and_documentation": {
    "documentation_url": "docs/",
    "api_documentation": "/docs",
    "support_contact": "whis-support@linkops.com",
    "community_forum": "https://github.com/linkops-industries/SOAR-copilot/discussions"
  },

  "legal_and_compliance": {
